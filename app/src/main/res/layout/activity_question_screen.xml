<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuestionScreen">

    <!-- Background image for the question screen -->
    <ImageView
        android:id="@+id/imageBackground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:contentDescription="Background image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/image2" />

    <!-- Heading text -->
    <TextView
        android:id="@+id/headingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Answer the following questions:"
        android:textSize="22sp"
        android:textStyle="bold"
        android:background="#DDFFFFFF"
        android:padding="8dp"
        android:textAlignment="center"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp" />

    <!-- Question display -->
    <TextView
        android:id="@+id/questionText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#e6eaed"
        android:text=""
        android:textSize="20sp"
        android:textColor="#000000"
        android:gravity="center"
        android:padding="16dp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/headingText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp" />

    <!-- Answer feedback (Correct/Incorrect) -->
    <TextView
        android:id="@+id/answerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:gravity="center"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/questionText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />

    <!-- True button -->
    <Button
        android:id="@+id/trueButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="True"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#4CAF50"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/answerText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/falseButton"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_weight="1" />

    <!-- False button -->
    <Button
        android:id="@+id/falseButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="False"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#F44336"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/answerText"
        app:layout_constraintStart_toEndOf="@id/trueButton"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginStart="8dp"
        app:layout_constraintHorizontal_weight="1" />

    <!-- Next button -->
    <Button
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next Question"
        android:textSize="18sp"
        android:textColor="#000000"
        android:backgroundTint="#FFFFFF"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/falseButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
