<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity3"
    android:background="@drawable/screen3">


    <!-- Title Text -->
    <TextView
        android:id="@+id/headTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check Your Results"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#673AB7"
        android:background="#DDFFFFFF"
        android:padding="12dp"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="48dp" />

    <!-- Result / Feedback Text -->
    <TextView
        android:id="@+id/resultText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="18sp"
        android:textColor="#000000"
        android:gravity="center"
        android:background="#FAFAFA"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/headTxt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp" />

    <!-- Review Button -->
    <Button
        android:id="@+id/revButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Review"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#3C44D6"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/resultText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp" />

    <!-- Exit Button -->
    <Button
        android:id="@+id/exitButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Exit"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#2897B0"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/revButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
